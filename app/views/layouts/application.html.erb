<!DOCTYPE html>
<html>
<head>
  <title>Ogyz</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
  <h5 class="my-0 mr-md-auto font-weight-normal">Ogyz Company</h5>
  <nav class="my-2 my-md-0 mr-md-3 header-menu">
    <%= link_to 'Authors', authors_path, class: 'p-2 text-dark' %>
    <%= link_to 'Books', books_path, class: 'p-2 text-dark' %>
    <%= link_to 'Readers', '', class: 'p-2 text-dark' %>
  </nav>
  <% if member_signed_in? %>
    <%= link_to('Logout', destroy_member_session_path, method: :delete, class: 'btn btn-outline-primary') %>
  <% else %>
    <%= link_to('Login', new_member_session_path, class: 'btn btn-outline-primary') %>
    <%= link_to('Sign Up', new_member_registration_path, class: 'space-left btn btn-outline-primary') %>
  <% end %>
  <style>
  </style>
</div>

<div class="container" data-controller="<%= controller_name %>">
  <%= yield %>
</div>
</body>
</html>

